{
  "name": "code-shaper",
  "description": "Code Shaper CLI",
  "version": "0.0.18",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/code-shaper/code-shaper",
    "directory": "apps/code-shaper"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "bin": {
    "shaper": "bin/shaper"
  },
  "scripts": {

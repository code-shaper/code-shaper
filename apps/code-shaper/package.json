    "lint": "eslint src/**/*.ts*",
    "test": "echo No tests in this package yet",
    "clean": "rimraf .turbo node_modules dist coverage **/test-output"
  },
  "dependencies": {
    "@code-shaper/repo": "*",
    "@code-shaper/shaper-utils": "*",
    "inquirer": "^8.2.4",
    "inquirer-directory": "^2.2.0",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/inquirer": "^8.2.1",
    "@types/node": "^18.0.5",
    "@types/yargs": "^17.0.10",
    "copyfiles": "^2.4.1",
    "eslint": "^8.20.0",
    "eslint-config-custom": "*",
    "jest": "^28.1.3",
    "jest-config-custom": "*",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4",
    "typescript-config-custom": "*"
  }
}
